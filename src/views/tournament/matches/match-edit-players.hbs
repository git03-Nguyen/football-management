{{> match-header}}
<div class="bg-white-color px-5 py-3 text-center">
  <div class="row mx-5">

    <div class="d-flex mb-3" id="sub-sub-navigation">
      {{#ifEquals subSubNavigation 0}}
      <a class="h6 fw-bold active">Thông số</a>
      {{else}}
      <a href="/tournament/matches/{{match.id}}/edit" class="h6 fw-bold text-decoration-none">Thông số</a>
      {{/ifEquals}}

      {{#ifEquals subSubNavigation 1}}
      <a class="h6 fw-bold ms-3 active">Đội hình</a>
      {{else}}
      <a href="/tournament/matches/{{match.id}}/edit/players" class="h6 fw-bold ms-3 text-decoration-none">Đội hình</a>
      {{/ifEquals}}

      {{#ifEquals subSubNavigation 2}}
      <a class="h6 fw-bold ms-3 active">Bán vé</a>
      {{else}}
      <a href="/tournament/matches/{{match.id}}/edit/tickets" class="h6 fw-bold ms-3 text-decoration-none">Bán vé</a>
      {{/ifEquals}}
    </div>

    {{!-- First team --}}
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center align-items-center text-primary-color mb-3">
        <img src="/img/teams/{{match.teamId1}}/logo.png" height="35" class="me-2" alt="">
        <p class="h5 m-0 fw-bold ">{{match.name1}}</p>
      </div>
      <button class="btn btn-primary">
        <i class="fa fa-plus"></i>
        Thêm
      </button>
    </div>

    <div class="my-3" id="table-goals">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col" class="text-start">Cầu thủ trên sân</th>
            <th scope="col">Thời gian vào</th>
            <th scope="col">Thời gian ra</th>
            <th scope="col">Thay cho cầu thủ</th>
            <th scope="col">Thao tác</th>
          </tr>
        </thead>
        <tbody>
          {{#each match.players1}}
          <tr>
            <th scope="row">{{sum @index 1}}</th>

            <td class="text-start" style="width: 15rem;">
              <select class="form-select" aria-label="Default select example" style="width: 15rem;">
                <option selected>{{this.name}}</option>
              </select>
            </td>

            <td style="width: fit-content;">
              <div class="input-group">
                <input type="text" class="form-control text-center" placeholder="00p00s" style="width: 3rem;">
              </div>
            </td>

            <td style="width: fit-content;">
              <div class="input-group">
                <input type="text" class="form-control text-center" placeholder="00p00s" style="width: 3rem;">
              </div>
            </td>

            <td class="text-start" style="width: 15rem;">
              <select class="form-select" aria-label="Default select example" style="width: 15rem;">
                <option selected>-</option>
              </select>
            </td>

            <td>
              <a href="">
                <button class="btn btn-outline-danger">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </a>
            </td>
          </tr>
          {{/each}}


        </tbody>
      </table>
    </div>

    {{!-- Second team --}}
    <div class="d-flex justify-content-between align-items-center mt-2">
      <div class="d-flex align-items-center align-items-center text-primary-color mb-3">
        <img src="/img/teams/{{match.teamId2}}/logo.png" height="35" class="me-2" alt="">
        <p class="h5 m-0 fw-bold ">{{match.name2}}</p>
      </div>
      <button class="btn btn-primary">
        <i class="fa fa-plus"></i>
        Thêm
      </button>
    </div>

    <div class="my-3" id="table-goals">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col" class="text-start">Cầu thủ trên sân</th>
            <th scope="col">Thời gian vào</th>
            <th scope="col">Thời gian ra</th>
            <th scope="col">Thay cho cầu thủ</th>
            <th scope="col">Thao tác</th>
          </tr>
        </thead>
        <tbody>
          {{#each match.players2}}
          <tr>
            <th scope="row">{{sum @index 1}}</th>

            <td class="text-start" style="width: 15rem;">
              <select class="form-select" aria-label="Default select example" style="width: 15rem;">
                <option selected>{{this.name}}</option>
              </select>
            </td>

            <td style="width: fit-content;">
              <div class="input-group">
                <input type="text" class="form-control text-center" placeholder="00p00s" style="width: 3rem;">
              </div>
            </td>

            <td style="width: fit-content;">
              <div class="input-group">
                <input type="text" class="form-control text-center" placeholder="00p00s" style="width: 3rem;">
              </div>
            </td>

            <td class="text-start" style="width: 15rem;">
              <select class="form-select" aria-label="Default select example" style="width: 15rem;">
                <option selected>-</option>
              </select>
            </td>

            <td>
              <a href="">
                <button class="btn btn-outline-danger">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </a>
            </td>
          </tr>
          {{/each}}

        </tbody>
      </table>
    </div>

    <div class="d-flex justify-content-center mt-2">
      <button class="btn btn-primary">
        <i class="fas fa-save"></i>
        Lưu
      </button>
    </div>

  </div>
</div>