{{> tournament-header}}
<div class="bg-white-color px-5 py-3 text-center">
  <div class="row mx-5 mb-2">

    <div class="d-flex mb-3" id="sub-sub-navigation">
      {{#ifEquals subSubNavigation 0}}
      <a href="#" class="h6 fw-bold active">Đội bóng</a>
      {{else}}
      <a href="/tournament/statistics" class="h6 fw-bold text-decoration-none">Đội bóng</a>
      {{/ifEquals}}

      {{#ifEquals subSubNavigation 1}}
      <a href="#" class="h6 fw-bold ms-3 active">Cầu thủ</a>
      {{else}}
      <a href="/tournament/statistics/players" class="h6 fw-bold ms-3 text-decoration-none">Cầu thủ</a>
      {{/ifEquals}}
    </div>

    <div class="d-flex justify-content-between align-items-end mb-1">
      <p class="m-0 text-muted text-end">T-H-B: Thắng-Hoà-Bại</p>
      <a href="/tournament/statistics/download">
        <button class="btn btn-success">
          <i class="fas fa-download"></i>
          <span class="ms-2">Tải xuống</span>
        </button>
      </a>
    </div>

    <div class="table-responsive mb-3" id="table-leaderboard">
      <table class="table table-hover table-borderless rounded mb-1">
        <thead>
          <tr>
            <th scope="col" class="bg-yellow-color fw-normal text-light">#</th>
            <th scope="col" class="bg-yellow-color fw-normal text-light"></th>
            <th scope="col" class="bg-yellow-color fw-normal text-light text-start">Tên đội</th>
            <th scope="col" class="bg-yellow-color fw-normal text-light">Số trận</th>
            <th scope="col" class="bg-yellow-color fw-normal text-light">T-H-B</th>
            <th scope="col" class="bg-yellow-color fw-normal text-light">Số bàn thắng</th>
            <th scope="col" class="bg-yellow-color fw-normal text-light">Số bàn thua</th>
            <th scope="col" class="bg-yellow-color fw-normal text-light">Phản lưới nhà</th>
            <th scope="col" class="bg-yellow-color fw-normal text-light">Thẻ vàng</th>
            <th scope="col" class="bg-yellow-color fw-normal text-light">Thẻ đỏ</th>
          </tr>
        </thead>
        <tbody>
          {{#each teams}}
          <tr>
            <th scope="row" class="fw-normal">{{sum @index 1}}</th>
            <td>
              <img src="/img/teams/{{this.id}}/logo.png" alt="" height="30px">
            </td>
            <td>
              <a href="/teams/{{this.id}}">
                <p class="m-0 text-start">{{this.name}}</p>
              </a>
            </td>
            <td>{{this.nOfPlayedMatches}}</td>
            <td>{{this.nOfWins}}-{{this.nOfDraws}}-{{this.nOfLosses}}</td>
            <td>{{this.nOfGoals}}</td>
            <td>{{this.nOfGoalsAgainst}}</td>
            <td>{{this.nOfOwnGoals}}</td>
            <td>{{this.nOfYellowCards}}</td>
            <td>{{this.nOfRedCards}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>