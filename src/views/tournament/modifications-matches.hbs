{{> tournament-header}}
<div class="bg-white-color">
  <div class="row mx-5 px-5 pt-3">

    <div class="d-flex" id="sub-sub-navigation" class="mb-3">
      {{#ifEquals subSubNavigation 0}}
      <a class="h6 fw-bold active">Cấu hình</a>
      {{else}}
      <a href="/tournament/modifications" class="h6 fw-bold text-decoration-none">Cấu hình</a>
      {{/ifEquals}}

      {{#ifEquals subSubNavigation 1}}
      <a class="h6 fw-bold ms-3 active">Đội bóng</a>
      {{else}}
      <a href="/tournament/modifications/teams" class="h6 fw-bold ms-3 text-decoration-none">Đội bóng</a>
      {{/ifEquals}}

      {{#ifEquals subSubNavigation 2}}
      <a class="h6 fw-bold ms-3 active">Lịch đấu</a>
      {{else}}
      <a href="/tournament/modifications/matches" class="h6 fw-bold ms-3 text-decoration-none">Lịch đấu</a>
      {{/ifEquals}}

      {{#ifEquals subSubNavigation 3}}
      <a class="h6 fw-bold ms-3 active">Khác</a>
      {{else}}
      <a href="/tournament/modifications/others" class="h6 fw-bold ms-3 text-decoration-none">Khác</a>
      {{/ifEquals}}
    </div>

    <div class="d-flex justify-content-between align-items-end p-0 px-2 my-2">
      <div class="dropdown open">
        <button class="btn btn-outline-dark dropdown-toggle" type="button" id="triggerId" data-bs-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Vòng {{this.round}}
        </button>
        <div class="dropdown-menu" aria-labelledby="triggerId">

          {{#each this.rounds}}
          <a class="dropdown-item {{#ifEquals ../round (sum @index 1)}}disabled{{/ifEquals}}"
            href="/tournament/modifications/matches?round={{sum @index 1}}">Vòng {{sum @index 1}}</a>
          {{/each}}

        </div>
      </div>

      <a href="">
        <button class="btn btn-primary">
          <i class="fas fa-sync-alt me-1"></i>
          Ngẫu nhiên
        </button>
      </a>
    </div>

    <div class="my-3" id="table-teams">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col" class="text-start">Đội thứ nhất</th>
            <th scope="col" class="text-start">Đội thứ hai</th>
            <th scope="col">Địa điểm</th>
            <th scope="col">Ngày</th>
            <th scope="col">Giờ</th>
            <th scope="col">Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td class="text-start" style="width: 15rem;">
              {{!-- Dropdown to choose team in registering list --}}
              <div class="dropdown open">
                <button class="btn btn-outline-dark dropdown-toggle text-start" type="button" id="triggerId"
                  data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 15rem;">
                  Chọn đội
                </button>
                <div class="dropdown-menu" aria-labelledby="triggerId" style="width: 15rem;">

                  {{!-- {{#each this.teams}}
                  <a class="dropdown-item" href="#">{{this}}</a>
                  {{/each}} --}}
                  <a class="dropdown-item" href="#">TSS FC</a>

                </div>
              </div>
            </td>
            <td class="text-start" style="width: 15rem;">
              {{!-- Dropdown to choose team in registering list --}}
              <div class="dropdown open">
                <button class="btn btn-outline-dark dropdown-toggle text-start" type="button" id="triggerId"
                  data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 15rem;">
                  Chọn đội
                </button>
                <div class="dropdown-menu" aria-labelledby="triggerId" style="width: 15rem;">

                  {{!-- {{#each this.teams}}
                  <a class="dropdown-item" href="#">{{this}}</a>
                  {{/each}} --}}
                  <a class="dropdown-item" href="#">Good Morning FC</a>

                </div>
              </div>
            </td>
            <td>
              {{!-- Input text --}}
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Địa điểm">
              </div>
            </td>
            <td>
              {{!-- Input date --}}
              <div class="input-group">
                <input type="date" class="form-control" placeholder="Ngày" style="width: 6rem;">
              </div>
            </td>
            <td style="width: fit-content;">
              {{!-- Input time --}}
              <div class="input-group">
                <input type="time" class="form-control" placeholder="Giờ" style="width: 3rem;">
              </div>
            </td>
            <td>
              {{!-- Edit --}}
              <a href="">
                <button class="btn btn-outline-dark">
                  <i class="fas fa-edit"></i>
                </button>
              </a>
            </td>
          </tr>


        </tbody>
      </table>
    </div>

    <div class="text-center">
      <a href="">
        <button class="btn btn-primary">Lưu</button>
      </a>

    </div>






  </div>
</div>