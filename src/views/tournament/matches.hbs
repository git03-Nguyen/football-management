{{> tournament-header}}
<div class="bg-white-color px-5 py-3 text-center">
  <div class="row mx-5 mb-2">

    <div class="d-flex justify-content-between align-items-end p-0 mb-2">
      <p class="m-0">Có {{this.rounds.length}} vòng đấu và {{this.countAllMatches}} trận đấu.</p>

      <div class="dropdown open">
        <button class="btn btn-outline-dark dropdown-toggle" type="button" id="triggerId" data-bs-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Vòng {{this.round}}
        </button>
        <div class="dropdown-menu" aria-labelledby="triggerId">

          {{#each this.rounds}}
          <a class="dropdown-item {{#ifEquals ../round (sum @index 1)}}disabled{{/ifEquals}}"
            href="/tournament/matches?round={{sum @index 1}}">Vòng {{sum @index 1}}</a>
          {{/each}}

        </div>
      </div>
    </div>

    <div class="table-responsive mb-3" id="table-leaderboard">
      {{#each this.dates}}
      <table class="table table-hover table-borderless rounded mb-0">
        <thead>
          <tr>
            <th scope="col" colspan="3" class="bg-yellow-color fw-normal text-light w-auto">{{this.date}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.matches}}

          <tr class="text-center">
            <td class="py-2  w-50">
              <div class="d-flex justify-content-end align-items-center">
                <a href="/teams/{{this.teamId1}}">
                  <p class="m-0">{{this.name1}}</p>
                </a>
                <img src="/img/teams/{{this.teamId1}}/logo.png" alt="" height="30px" class="ms-2">
              </div>
            </td>

            {{#if this.isPlayed}}
            <td class="py-2" style="white-space: nowrap; width: 1%;">
              <a href="/tournament/matches/{{this.id}}">
                <div class="rounded bg-success px-3">
                  <p class="m-0" style="width:fit-content;">{{this.scores1}} - {{this.scores2}}</p>
                </div>
              </a>
            </td>
            {{else}}
            <td class="py-2" style="white-space: nowrap; width: 1%;">
              <a href="/tournament/matches/{{this.id}}">
                <div class="rounded text-decoration-underline px-2"
                  style="font-size: 0.9rem ;text-underline-offset: 0.2rem;">
                  <p class="m-0" style="width:fit-content;">{{this.time}}</p>
                </div>
              </a>
            </td>
            {{/if}}

            <td class="py-2 w-50">
              <div class="d-flex justify-content-start align-items-center">
                <img src="/img/teams/{{this.teamId2}}/logo.png" alt="" height="30px" class="me-2">
                <a href="/teams/{{this.teamId2}}">
                  <p class="m-0">{{this.name2}}</p>
                </a>
              </div>
            </td>
          </tr>

          {{/each}}
        </tbody>
      </table>
      {{#if @last}}
      {{else}}
      <div class="bg-white-color" style="height: 30px;"></div>
      {{/if}}
      {{/each}}


    </div>

  </div>
</div>