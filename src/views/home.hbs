  <div class="col-md-6 align-items-center">
    <div class="row">
      <div class="col-md-4">
        <img src="/img/home/fit-logo.png" height="40" alt="">
      </div>
      <div class="col-md-4">
        <img src="/img/home/vtvcab-logo.png" height="40" alt="">
      </div>
      <div class="col-md-4">
        <img src="/img/home/thanhnien-logo.png" height="40" alt="">
      </div>
    </div>
  </div>
</div>