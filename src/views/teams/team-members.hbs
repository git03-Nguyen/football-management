{{> teams-header}}

<div class="bg-white-color px-5 py-4 text-center">
  <div class="row mx-5 mb-1">

    <div class="d-flex justify-content-start align-items-end mb-1">
      <div class="text-muted m-0 ms-2 mb-2">
        Tổng số thành viên: <span class="fw-bold">{{team.players.length}}</span> người.
      </div>
    </div>

    <div class="row m-0 row-cols-4 row-gap-3" id="all-members">
      {{!-- Each player is a card --}}
      {{#each team.players as |player|}}
      <div class="col">
        <div class="card p-3 text-center align-items-center shadow">
          <img src="/img/players/{{player.id}}.png" class="rounded-circle" alt="Member Avatar"
            style="width: 150px; height: 150px;">
          <div class="card-body m-0 p-2">
            <a href="/players/{{player.id}}" class="card-title">{{player.name}}</a> ({{player.number}})
            <p class="text-muted m-0">Vị trí: {{player.positions}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>


  </div>
</div>